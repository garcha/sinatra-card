    <script src="https://s3.amazonaws.com/medicalidus/uploads/bootstrap.min.js"></script>
    <script src="https://s3.amazonaws.com/medicalidus/uploads/jasny-bootstrap.min.js"></script>
    
    <script>
    /** removes alerts after 4 seconds */
    window.setTimeout(function() {
        $(".alert").fadeTo(4500, 0).slideUp(500, function(){
            $(this).remove();
        });
    }, 4000);
    </script>
